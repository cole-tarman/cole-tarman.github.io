// JavaScript for horizontal scrolling and page navigation
const pages = document.querySelectorAll('.page');

// Function to scroll to a specific page
function scrollToPage(pageNumber) {
    const sectionWidth = window.innerWidth;
    const targetX = (pageNumber - 1) * sectionWidth;
    document.body.style.transform = `translateX(-${targetX}px)`;
}

// Enable horizontal scrolling with the mouse wheel
document.addEventListener("wheel", (event) => {
    if (event.deltaY !== 0) {
        const currentPage = Math.round(Math.abs(document.body.getBoundingClientRect().left) / window.innerWidth) + 1;
        let targetPage;

        if (event.deltaY > 0 && currentPage < pages.length) {
            targetPage = currentPage + 1;
        } else if (event.deltaY < 0 && currentPage > 1) {
            targetPage = currentPage - 1;
        } else {
            return;
        }

        scrollToPage(targetPage);
    }
});
